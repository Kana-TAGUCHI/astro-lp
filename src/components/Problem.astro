---
import problem_01 from '../assets/problem_01.png';
import problem_02 from '../assets/problem_02.png';
import problem_03 from '../assets/problem_03.png';

const problems = [
  {
    img: problem_01,
    title: '採用コストが高い',
    description:
      'エージェント経由だと一人当たり年収の平均35%近くの仲介手数料が必要',
  },
  {
    img: problem_02,
    title: '採用時に能力を見極められない',
    description: '実績・スキルシートは良くても入社してみたら思ったのと違う',
  },
  {
    img: problem_03,
    title: '早期退職してしまう',
    description:
      '100万円以上かけて正社員雇用したのに、能力・社風的にフィットせず数か月で退職',
  },
];
---

<section class='bg-main-50 relative'>
  <div class='container mx-auto py-[60px]'>
    <h2 class='font-semibold text-xl text-center'>
      こんな課題、私たちが解決します。
    </h2>
    <ul class='flex flex-col mt-2 md:flex-row md:pt-10'>
      {
        problems.map((problem) => (
          <li class='p-[30px] flex flex-col md:px-7 md:py-2 md:w-1/3 mx-auto'>
            <img
              src={problem.img.src}
              width={problem_01.width}
              height={problem_01.height}
              alt={`${problem.title}様子のイラスト`}
              class='w-[200px] mx-auto md:w-[256px] md:h-[178px]'
            />
            <h3 class='font-semibold text-center text-lg pt-4 flex-grow'>
              {problem.title}
            </h3>
            <p class='pt-2'>{problem.description}</p>
          </li>
        ))
      }
    </ul>
  </div>
  <div
    class='absolute -bottom-[50px] left-[calc(50%-80px)] border-l-[80px] border-l-transparent border-t-[50px] border-t-main-50 border-r-[80px] border-r-transparent'
  >
  </div>
</section>
